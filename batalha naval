#include <stdio.h>

#define TAM_TABULEIRO 10
#define TAM_NAVIO 3

int main() {

    // ==============================
    // DECLARAÇÃO E INICIALIZAÇÃO
    // ==============================

    int tabuleiro[TAM_TABULEIRO][TAM_TABULEIRO];

    // Inicializa o tabuleiro com 0 (água)
    for (int i = 0; i < TAM_TABULEIRO; i++) {
        for (int j = 0; j < TAM_TABULEIRO; j++) {
            tabuleiro[i][j] = 0;
        }
    }

    // ==============================
    // DEFINIÇÃO DAS COORDENADAS
    // ==============================

    // Navio Horizontal
    int linhaH = 1, colunaH = 2;

    // Navio Vertical
    int linhaV = 4, colunaV = 7;

    // Navio Diagonal Principal (↘)
    int linhaDP = 0, colunaDP = 0;

    // Navio Diagonal Secundária (↙)
    int linhaDS = 0, colunaDS = 9;

    // ==============================
    // POSICIONAMENTO NAVIO HORIZONTAL
    // ==============================

    if (colunaH + TAM_NAVIO <= TAM_TABULEIRO) {

        int podePosicionar = 1;

        for (int i = 0; i < TAM_NAVIO; i++) {
            if (tabuleiro[linhaH][colunaH + i] != 0)
                podePosicionar = 0;
        }

        if (podePosicionar) {
            for (int i = 0; i < TAM_NAVIO; i++)
                tabuleiro[linhaH][colunaH + i] = 3;
        } else {
            printf("Erro: Sobreposição no navio horizontal!\n");
        }

    } else {
        printf("Erro: Navio horizontal fora dos limites!\n");
    }

    // ==============================
    // POSICIONAMENTO NAVIO VERTICAL
    // ==============================

    if (linhaV + TAM_NAVIO <= TAM_TABULEIRO) {

        int podePosicionar = 1;

        for (int i = 0; i < TAM_NAVIO; i++) {
            if (tabuleiro[linhaV + i][colunaV] != 0)
                podePosicionar = 0;
        }

        if (podePosicionar) {
            for (int i = 0; i < TAM_NAVIO; i++)
                tabuleiro[linhaV + i][colunaV] = 3;
        } else {
            printf("Erro: Sobreposição no navio vertical!\n");
        }

    } else {
        printf("Erro: Navio vertical fora dos limites!\n");
    }

    // ==============================
    // POSICIONAMENTO DIAGONAL PRINCIPAL (↘)
    // ==============================

    if (linhaDP + TAM_NAVIO <= TAM_TABULEIRO &&
        colunaDP + TAM_NAVIO <= TAM_TABULEIRO) {

        int podePosicionar = 1;

        for (int i = 0; i < TAM_NAVIO; i++) {
            if (tabuleiro[linhaDP + i][colunaDP + i] != 0)
                podePosicionar = 0;
        }

        if (podePosicionar) {
            for (int i = 0; i < TAM_NAVIO; i++)
                tabuleiro[linhaDP + i][colunaDP + i] = 3;
        } else {
            printf("Erro: Sobreposição na diagonal principal!\n");
        }

    } else {
        printf("Erro: Diagonal principal fora dos limites!\n");
    }

    // ==============================
    // POSICIONAMENTO DIAGONAL SECUNDÁRIA (↙)
    // ==============================

    if (linhaDS + TAM_NAVIO <= TAM_TABULEIRO &&
        colunaDS - (TAM_NAVIO - 1) >= 0) {

        int podePosicionar = 1;

        for (int i = 0; i < TAM_NAVIO; i++) {
            if (tabuleiro[linhaDS + i][colunaDS - i] != 0)
                podePosicionar = 0;
        }

        if (podePosicionar) {
            for (int i = 0; i < TAM_NAVIO; i++)
                tabuleiro[linhaDS + i][colunaDS - i] = 3;
        } else {
            printf("Erro: Sobreposição na diagonal secundária!\n");
        }

    } else {
        printf("Erro: Diagonal secundária fora dos limites!\n");
    }

    // ==============================
    // EXIBIÇÃO DO TABULEIRO
    // ==============================

    printf("\nTABULEIRO BATALHA NAVAL - NIVEL AVENTUREIRO\n\n");

    for (int i = 0; i < TAM_TABULEIRO; i++) {
        for (int j = 0; j < TAM_TABULEIRO; j++) {
            printf("%d ", tabuleiro[i][j]);
        }
        printf("\n");
    }

    return 0;
}
